<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <size android:height="40dp" android:width="50dp"/>
            <corners android:radius="50dp"/>
            <stroke android:color="@color/track_switch" android:width="2dp"/>
        </shape>
    </item>

    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <size android:height="40dp" android:width="50dp"/>
            <corners android:radius="50dp"/>
            <stroke android:color="@color/track_switch_inactive" android:width="2dp"/>
        </shape>
    </item>
</selector>
